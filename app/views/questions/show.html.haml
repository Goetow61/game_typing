.content
  %table.list1
    %tr
      %td
        = @qfile.category
    %tr
      %td
        = @qfile.title
    %tr
      %td
        = simple_format(@qfile.overview)
  %table.list2
    %tr
      %td
        = @qfile.user.nickname + ' さん が登録'
    %tr
      %td
        = @qfile.created_at.to_s(:db) + ' に登録'
    %tr
      %td
        = @qfile.updated_at.to_s(:db) + ' に更新'
  .submit
    = link_to 'この問題をタイピングする', play_question_path
  - if user_signed_in? && current_user.id == @qfile.user_id && @qfile.user_id != 1
    .submit.destroy
      = link_to 'この問題を削除する', question_path, method: :delete